<h1 class="main-title">Books</h1>
<h6 class="contents-title">Title</h6>
<h6 class="contents-text">Body</h6>

<% @books.each do |book| %>
<spam><%= book.title  %></spam>
<span><%= link_to 'Show', "new/#{book.id}" %></span>
<span><%= link_to 'Edit', "new/#{book.id}/edit" %></span>
<span><%= link_to 'Destroy', 'new, method:delete, "data-confirm' => 'Are you sure?' %></span>
<br>
<% end %>

<h2 class="post-title">New book</h2>

<%= form_for(@book,url:'/new') do |f| %>

	<h5>title</h5>
	<%= f.text_field :title %>

	<h5>Body</h5>
	<%= f.text_area :body %>

	<%= f.submit 'Create Book' %>

<% end %>
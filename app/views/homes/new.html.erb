<body>
	<div class="flash">
		<% if flash[:notice] %>
        <%= flash[:notice] %>
    	<% end %>
    </div>
    
<h1>Books</h1>

<table>
	<tr>
		<thead>
		<th>Title</th>
		<th>Body</th>
		<th></th>
		<th></th>
		<th></th>
		</thead>
	</tr>
	<tbody>
		<% @books.each do |book| %>
	<tr>
		<td>
			<%= book.title  %>
		</td>
		<td>
			<%= book.body %>
		</td>
		<td>
			<%= link_to 'Show', "new/#{book.id}" %>
		</td>
		<td>
			<%= link_to 'Edit', "new/#{book.id}/edit" %>
		</td>
		<td>
			<%= link_to 'Destroy', "new/#{book.id}", method: :delete, "data-confirm" => "Are you sure?" %>
		</td>
	</tr>
		<% end %>
	</tbody>
</table>

<h2>New book</h2>

<% if @book.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<%= form_for(@book,url:'/new') do |f| %>
<div class = "field">
	<label for="book_title">Title</label>
	<%= f.text_field :title %>
</div>
<div class = "field">
	<label for="book-body">Body</label>
	<%= f.text_area :body %>
</div>
<div class = "action">
	<%= f.submit 'Create Book' %>
</div>
<% end %>

</body>